---
import { AdoptionContent, CounselingContent, PyschAssessmentContent } from "@/lib/config/services-content";
import Layout from "../_layout.astro";

const { service } = Astro.params;
---

<Layout>
  <article class='w-full font-mono lg:pt-6'>
    <div class='w-full'>
      <ul id='tabs' class='items-center justify-center bg-muted text-muted-foreground flex w-full flex-wrap gap-3 overflow-x-auto border border-b border-neutral-200/60 p-3 px-6 shadow-inner lg:grid lg:grid-cols-3 lg:rounded'>
        <a
          href='/services/counseling'
          data-astro-history='replace'
          data-state={service === "counseling" || service === "" ? "active" : ""}
          class='text-center rounded-sm px-3 font-medium transition-all focus-visible:outline-none data-[state=active]:bg-white data-[state=active]:text-foreground whitespace-nowrap border shadow border-border/5 bg-neutral-50/50 py-4 text-xs text-neutral-500 hover:text-neutral-800 lg:text-lg'>
          Counseling
        </a>
        <a
          href='/services/psychological-assessment'
          data-astro-history='replace'
          data-state={service === "psychological-assessment" ? "active" : ""}
          class='text-center rounded-sm px-3 font-medium transition-all focus-visible:outline-none data-[state=active]:bg-white data-[state=active]:text-foreground whitespace-nowrap border shadow border-border/5 bg-neutral-50/50 py-4 text-xs text-neutral-500 hover:text-neutral-800 lg:text-lg'>
          Psychological Assessments
        </a>
        <a
          href='/services/adoption'
          data-astro-history='replace'
          data-state={service === "adoption" ? "active" : ""}
          class='text-center rounded-sm px-3 font-medium transition-all focus-visible:outline-none data-[state=active]:bg-white data-[state=active]:text-foreground whitespace-nowrap border shadow border-border/5 bg-neutral-50/50 py-4 text-xs text-neutral-500 hover:text-neutral-800 lg:text-lg'>
          Adoption
        </a>
      </ul>
      <div id='content' class='mt-2 ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-full px-3 py-6 lg:px-6'>
        {
          service == "psychological-assessment" ? <PyschAssessmentContent client:idle />
          : service == "somatic-therapy" ? <p class='text-center text-lg'>More information coming soon!</p>
          : service == "adoption" ? <AdoptionContent client:idle />
          : <CounselingContent client:idle />
        }
      </div>
    </div>
  </article>
</Layout>
